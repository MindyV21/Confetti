<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NoteImagesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivExitFullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_fullscreen_exit_24" />

        <com.codepath.confetti.models.PinView
            android:layout_below="@id/ivExitFullscreen"
            android:id="@+id/ssivNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:adjustViewBounds="true"/>
    </RelativeLayout>
</FrameLayout>